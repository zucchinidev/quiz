  </label>
  <select id="theme" name="quiz[theme]">
    <% options.forEach(function(option) { %>
    <% var selected = (quiz.theme === option.value) ? 'selected' : '' %>
    <option <%= selected%> value="<%= option.value %>">
      <%= option.text %>
    </option>
    <% }) %>
  </select>
</div>
